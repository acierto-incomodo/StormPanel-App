{
  "name": "stormpanel-app",
  "version": "1.2.3",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "publish": "electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.stormgamesstudios.stormpanel",
    "productName": "StormPanel APP",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "include": "build/installer.nsh",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StormPanel"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/acierto-incomodo/StormPanel-App.git"
  },
  "author": "StormGamesStudios",
  "license": "Apache-2.0",
  "dependencies": {
    "electron-updater": "^6.8.3"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  }
}