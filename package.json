{
  "name": "stormpanel-app",
  "version": "1.2.6",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "publish": "electron-builder --win --publish always",
    "build:linux": "electron-builder --linux AppImage deb",
    "publish:linux": "electron-builder --linux AppImage deb --publish always"
  },
  "build": {
    "appId": "com.stormgamesstudios.stormpanel",
    "artifactName": "StormPanel-APP-Setup-${version}.${ext}",
    "productName": "StormPanel APP",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "acierto-incomodo",
        "repo": "StormPanel-App"
      }
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "include": "build/installer.nsh",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StormPanel"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/acierto-incomodo/StormPanel-App.git"
  },
  "author": "StormGamesStudios <meliodas.aitor@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "electron-updater": "^6.8.3"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  }
}
